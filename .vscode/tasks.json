{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build and run",
            "type": "shell",
            "command": "mkdir -p .bin && /usr/bin/g++-13 -fdiagnostics-color=always -g ${file} -o .bin/${fileBasenameNoExtension} && ./.bin/${fileBasenameNoExtension}",
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Compile and run using g++-13 into .bin/"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}